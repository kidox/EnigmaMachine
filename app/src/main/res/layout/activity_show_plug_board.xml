<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_plug_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chao.myapplication.ShowPlugBoard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_a"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_b"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_c"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_d"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_e"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_f"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_g"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_h"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="I"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_i"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="J"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_j"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_k"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_l"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_m"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_n"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_o"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_p"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_q"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_r"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_s"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_t"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="U"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_u"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_v"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_w"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_x"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_y"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_z"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="RESET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_reset"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="DEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_delete"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>

            <Button
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_ok"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="connect to self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect_to_self"
                android:layout_weight="1"
                android:onClick="InputButtonOnClick"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Plugboard Pairs:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/current_plugboard_str"
        android:textSize="18sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_box"
        android:textSize="18sp"
        android:text=""
        android:layout_marginTop="53dp"
        android:layout_below="@+id/current_plugboard_str"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Reset to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/current_plugboard_str"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

</RelativeLayout>
